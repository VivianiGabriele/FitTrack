{
  "build": {
    "useNixpacks": true,
    "builder": "nixpacks",
    "buildCommand": "python manage.py collectstatic --noinput && pip install -r requirements.txt",
    "installCommand": "pip install -r requirements.txt",
    "startCommand": "gunicorn FitTrack.wsgi:application --bind 0.0.0.0:$PORT"
  },
  "deploy": {
    "startCommand": "gunicorn FitTrack.wsgi:application --bind 0.0.0.0:$PORT"
  }
}
